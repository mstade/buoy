<?xml version="1.0" encoding="utf-8"?>
<annotations version="1.0">

    <!--  Lifecycle tags -->
    <metadata name="Init" description="Call a method when the behavior is initialized">
        <context name="method" />
    </metadata>
    
    <metadata name="Activate" description="Call a method when the behavior is activated">
        <context name="method" />
    </metadata>
    
    <metadata name="Deactivate" description="Call a method when the behavior is deactivated">
        <context name="method" />
    </metadata>

    <metadata name="Dispose" description="Call a method when the behavior is disposed">
        <context name="method" />
    </metadata>

    <!--  Various injection tags -->
    <metadata name="Inject" description="Inject a dependency">
        <context name="variable">
            <attribute name="id" type="String" required="false" />
            <attribute name="type" type="String" required="false" />
        </context>
        <context name="getter">
            <attribute name="id" type="String" required="false" />
            <attribute name="type" type="String" required="false" />
        </context>
        <context name="setter">
            <attribute name="id" type="String" required="false" />
            <attribute name="type" type="String" required="false" />
        </context>
    </metadata>
    
    <metadata name="Find" description="Find on or more nodes in the display list">
        <context name="variable">
            <attribute name="target" type="String" required="true" />
            <attribute name="limit" type="uint" required="false" />
            <attribute name="live" type="Boolean" required="false" />
        </context>
        <context name="getter">
            <attribute name="target" type="String" required="true" />
            <attribute name="limit" type="uint" required="false" />
            <attribute name="live" type="Boolean" required="false" />
        </context>
        <context name="setter">
            <attribute name="target" type="String" required="true" />
            <attribute name="limit" type="uint" required="false" />
            <attribute name="live" type="Boolean" required="false" />
        </context>
    </metadata>
    
